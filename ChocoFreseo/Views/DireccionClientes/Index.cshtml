@model IEnumerable<ChocoFreseo.Models.Domain.DireccionCliente>

@{
    ViewData["Title"] = "Direcciones de clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Direcciones</h1>
        <p class="text-muted mb-0">Gestiona las direcciones registradas para tus clientes.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        + Nueva dirección
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Barrio</th>
                    <th>Calle / Vía</th>
                    <th>Número</th>
                    <th>Principal</th>
                    <th>Ubicación</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cliente?.NombreCompleto</td>
                            <td>@item.Barrio</td>
                            <td>@item.Calle</td>
                            <td>@item.Numero</td>
                            <td>
                                @if (item.EsPrincipal)
                                {
                                    <span class="badge bg-success">Principal</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Secundaria</span>
                                }
                            </td>
                            <td>
                                @if (item.Latitud.HasValue && item.Longitud.HasValue)
                                {
                                    <span class="badge bg-info text-dark">Con coordenadas</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Sin coordenadas</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                        Detalles
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                        Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-3 text-muted">
                            No hay direcciones registradas todavía.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
