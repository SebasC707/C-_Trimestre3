@using ChocoFreseo.Models.Domain
@model Domicilio

@{
    ViewData["Title"] = "Editar domicilio";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Editar domicilio</h1>
        <p class="text-muted mb-0">Actualiza los datos del domicilio.</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="mb-3">Domicilio #@Model.Id</h4>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label">Pedido</label>
                        <input type="text"
                               class="form-control"
                               value="Pedido #@Model.PedidoId - @Model.Pedido?.Cliente?.NombreCompleto"
                               disabled />
                        <input type="hidden" asp-for="PedidoId" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DireccionClienteId" class="form-label">Dirección del cliente</label>
                        <select asp-for="DireccionClienteId"
                                class="form-select"
                                asp-items="ViewBag.DireccionClienteId">
                        </select>
                        <span asp-validation-for="DireccionClienteId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ZonaEntregaId" class="form-label">Zona de entrega</label>
                        <select asp-for="ZonaEntregaId"
                                class="form-select"
                                asp-items="ViewBag.ZonaEntregaId">
                        </select>
                        <span asp-validation-for="ZonaEntregaId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RepartidorId" class="form-label">Repartidor</label>
                        <select asp-for="RepartidorId"
                                class="form-select"
                                asp-items="ViewBag.RepartidorId">
                            <option value="">-- Sin asignar --</option>
                        </select>
                        <span asp-validation-for="RepartidorId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EstadoDomicilio" class="form-label">Estado del domicilio</label>
                        <select asp-for="EstadoDomicilio"
                                class="form-select"
                                asp-items="Html.GetEnumSelectList<EstadoDomicilio>()">
                        </select>
                        <span asp-validation-for="EstadoDomicilio" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CostoDomicilio" class="form-label">Costo domicilio</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="CostoDomicilio" class="form-control" />
                            </div>
                            <span asp-validation-for="CostoDomicilio" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Propina" class="form-label">Propina</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Propina" class="form-control" />
                            </div>
                            <span asp-validation-for="Propina" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notas" class="form-label">Notas</label>
                        <textarea asp-for="Notas" class="form-control" rows="2"
                                  placeholder="Indicaciones adicionales para el repartidor..."></textarea>
                        <span asp-validation-for="Notas" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Línea de tiempo editable (solo lectura aquí) -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3">Tiempos registrados</h5>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <strong>Solicitud:</strong> @Model.HoraSolicitud.ToString("g")
                    </li>
                    <li class="mb-2">
                        <strong>Asignación:</strong>
                        @(Model.HoraAsignacion?.ToString("g") ?? "Pendiente")
                    </li>
                    <li class="mb-2">
                        <strong>Salida:</strong>
                        @(Model.HoraSalida?.ToString("g") ?? "Pendiente")
                    </li>
                    <li>
                        <strong>Entrega:</strong>
                        @(Model.HoraEntrega?.ToString("g") ?? "Pendiente")
                    </li>
                </ul>
                <small class="text-muted d-block mt-2">
                    Si manejas estos tiempos desde la lógica de negocio (por ejemplo, cuando cambias el estado),
                    puedes actualizar estas propiedades en el controlador.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
