@model ChocoFreseo.Models.Domain.Pedido

@{
    ViewData["Title"] = "Detalle del pedido";
    var estadoTexto = Model.EstadoPedido.ToString();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Detalle del pedido</h1>
        <p class="text-muted mb-0">Información del pedido #@Model.Id</p>
    </div>
</div>

<div class="row">
    <div class="col-md-7 mb-3">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-3">Pedido #@Model.Id</h4>

                <dl class="row mb-0">
                    <dt class="col-sm-3">Cliente</dt>
                    <dd class="col-sm-9">@Model.Cliente?.NombreCompleto</dd>

                    <dt class="col-sm-3">Fecha</dt>
                    <dd class="col-sm-9">@Model.FechaPedido.ToString("g")</dd>

                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">@Model.Total.ToString("C")</dd>

                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">
                        @{
                            string badgeClass = "bg-secondary";
                            switch (estadoTexto)
                            {
                                case "Pendiente":
                                    badgeClass = "bg-warning text-dark";
                                    break;
                                case "EnPreparacion":
                                    badgeClass = "bg-info text-dark";
                                    break;
                                case "Entregado":
                                    badgeClass = "bg-success";
                                    break;
                                case "Cancelado":
                                    badgeClass = "bg-danger";
                                    break;
                            }
                        }
                        <span class="badge @badgeClass">@estadoTexto</span>
                    </dd>

                    <dt class="col-sm-3">Método pago</dt>
                    <dd class="col-sm-9">@Model.MetodoPago</dd>

                    <dt class="col-sm-3">Observaciones</dt>
                    <dd class="col-sm-9">@Model.Observaciones</dd>
                </dl>

                <div class="mt-3 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bloque de domicilio relacionado -->
    <div class="col-md-5 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-2">Domicilio</h5>

                @if (Model.Domicilio != null)
                {
                    <p class="mb-1">
                        <strong>Estado:</strong> @Model.Domicilio.EstadoDomicilio
                    </p>
                    <p class="mb-1">
                        <strong>Repartidor:</strong> @Model.Domicilio.Repartidor?.NombreCompleto ?? "No asignado"
                    </p>
                    <p class="mb-1">
                        <strong>Zona:</strong> @Model.Domicilio.ZonaEntrega?.NombreZona
                    </p>
                    <p class="mb-1">
                        <strong>Costo:</strong> @Model.Domicilio.CostoDomicilio.ToString("C")
                    </p>
                    <div class="mt-2">
                        <a asp-controller="Domicilios"
                           asp-action="Details"
                           asp-route-id="@Model.Domicilio.Id"
                           class="btn btn-outline-primary btn-sm">
                            Ver domicilio
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-2">
                        Este pedido aún no tiene un domicilio asignado.
                    </p>
                    <a asp-controller="Domicilios"
                       asp-action="Create"
                       asp-route-pedidoId="@Model.Id"
                       class="btn btn-primary btn-sm">
                        Crear domicilio para este pedido
                    </a>
                }
            </div>
        </div>
    </div>
</div>
