@using ChocoFreseo.Models.Domain
@model IEnumerable<ChocoFreseo.Models.Domain.Pedido>

@{
    ViewData["Title"] = "Pedidos";

    var lista = Model?.ToList() ?? new List<Pedido>();
    int totalPedidos = lista.Count;
    decimal totalVentas = lista.Sum(p => p.Total);

    var estadosResumen = lista
        .GroupBy(p => p.EstadoPedido.ToString())
        .Select(g => new { Estado = g.Key, Cantidad = g.Count() })
        .ToList();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Pedidos</h1>
        <p class="text-muted mb-0">Control de pedidos de ChocoFreseo.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        + Nuevo pedido
    </a>
</div>

<!-- Resumen -->
<div class="row mb-3">
    <div class="col-6 col-md-3 mb-2">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="text-muted small">Total pedidos</div>
                <div class="fs-4 fw-bold">@totalPedidos</div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3 mb-2">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="text-muted small">Total ventas</div>
                <div class="fs-5 fw-bold">@totalVentas.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 mb-2">
        <div class="card">
            <div class="card-body py-2">
                <div class="text-muted small mb-1">Estados</div>
                @if (estadosResumen.Any())
                {
                    @foreach (var e in estadosResumen)
                    {
                        string badgeClass = "bg-secondary";
                        switch (e.Estado)
                        {
                            case "Pendiente":
                                badgeClass = "bg-warning text-dark";
                                break;
                            case "EnPreparacion":
                                badgeClass = "bg-info text-dark";
                                break;
                            case "Entregado":
                                badgeClass = "bg-success";
                                break;
                            case "Cancelado":
                                badgeClass = "bg-danger";
                                break;
                        }
                        <span class="badge @badgeClass me-1">
                            @e.Estado: @e.Cantidad
                        </span>
                    }
                }
                else
                {
                    <span class="text-muted">Sin pedidos aún.</span>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0 align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Total</th>
                    <th>Estado</th>
                    <th>Método pago</th>
                    <th>Observaciones</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (lista.Any())
                {
                    var i = 1;
                    foreach (var item in lista)
                    {
                        var estadoStr = item.EstadoPedido.ToString();
                        string badgeClass = "bg-secondary";
                        switch (estadoStr)
                        {
                            case "Pendiente":
                                badgeClass = "bg-warning text-dark";
                                break;
                            case "EnPreparacion":
                                badgeClass = "bg-info text-dark";
                                break;
                            case "Entregado":
                                badgeClass = "bg-success";
                                break;
                            case "Cancelado":
                                badgeClass = "bg-danger";
                                break;
                        }

                        <tr>
                            <td>@i</td>
                            <td>@item.FechaPedido.ToString("g")</td>
                            <td>@item.Cliente?.NombreCompleto</td>
                            <td>@item.Total.ToString("C")</td>
                            <td>
                                <span class="badge @badgeClass">@estadoStr</span>
                            </td>
                            <td>@item.MetodoPago</td>
                            <td>@item.Observaciones</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-outline-secondary">Detalles</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-outline-primary">Editar</a>

                                    @* Acceso rápido a domicilio *@
                                    @if (item.Domicilio == null)
                                    {
                                        <a asp-controller="Domicilios"
                                           asp-action="Create"
                                           asp-route-pedidoId="@item.Id"
                                           class="btn btn-outline-success">
                                            Crear domicilio
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Domicilios"
                                           asp-action="Details"
                                           asp-route-id="@item.Domicilio.Id"
                                           class="btn btn-outline-success">
                                            Ver domicilio
                                        </a>
                                    }

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-3 text-muted">
                            No hay pedidos registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
