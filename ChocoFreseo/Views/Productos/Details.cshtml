@model ChocoFreseo.Models.Domain.Producto

@{
    ViewData["Title"] = "Detalle del producto";

    var badgeClass = Model.Activo ? "bg-success" : "bg-secondary";
    var badgeText = Model.Activo ? "Activo" : "Inactivo";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Detalle del producto</h1>
        <p class="text-muted mb-0">Información del producto del catálogo.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-7 col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h4 class="mb-0">@Model.Nombre</h4>
                    <span class="badge @badgeClass">@badgeText</span>
                </div>

                <p class="text-muted mb-2">
                    @if (!string.IsNullOrWhiteSpace(Model.Categoria))
                    {
                        <span class="badge bg-light text-dark border">@Model.Categoria</span>
                    }
                </p>

                <dl class="row mb-0">
                    <dt class="col-sm-3">Descripción</dt>
                    <dd class="col-sm-9">
                        @(string.IsNullOrWhiteSpace(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)
                    </dd>

                    <dt class="col-sm-3">Precio</dt>
                    <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">
                        <span class="badge @badgeClass">@badgeText</span>
                    </dd>
                </dl>

                <div class="mt-3 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al catálogo</a>
                </div>
            </div>
        </div>
    </div>
</div>
