@model IEnumerable<ChocoFreseo.Models.Domain.Producto>

@{
    ViewData["Title"] = "Productos";

    var lista = Model?.ToList() ?? new List<ChocoFreseo.Models.Domain.Producto>();
    int totalProductos = lista.Count;
    int activos = lista.Count(p => p.Activo);
    int inactivos = totalProductos - activos;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Catálogo de productos</h1>
        <p class="text-muted mb-0">Gestiona los productos que ofrece ChocoFreseo.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        + Nuevo producto
    </a>
</div>

<!-- Resumen -->
<div class="row mb-3">
    <div class="col-4 col-md-3 mb-2">
        <div class="card text-center">
            <div class="card-body py-2">
                <div class="text-muted small">Total</div>
                <div class="fs-4 fw-bold">@totalProductos</div>
            </div>
        </div>
    </div>
    <div class="col-4 col-md-3 mb-2">
        <div class="card text-center border-success">
            <div class="card-body py-2">
                <div class="text-muted small">Activos</div>
                <div class="fs-4 fw-bold text-success">@activos</div>
            </div>
        </div>
    </div>
    <div class="col-4 col-md-3 mb-2">
        <div class="card text-center border-secondary">
            <div class="card-body py-2">
                <div class="text-muted small">Inactivos</div>
                <div class="fs-4 fw-bold text-secondary">@inactivos</div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0 align-middle">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Categoría</th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (lista.Any())
                {
                    foreach (var item in lista)
                    {
                        var badgeClass = item.Activo ? "bg-success" : "bg-secondary";
                        var badgeText = item.Activo ? "Activo" : "Inactivo";

                        <tr>
                            <td>@item.Nombre</td>
                            <td>
                                @if (string.IsNullOrWhiteSpace(item.Descripcion))
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                                else
                                {
                                    @item.Descripcion
                                }
                            </td>
                            <td>@item.Precio.ToString("C")</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.Categoria))
                                {
                                    <span class="badge bg-light text-dark border">@item.Categoria</span>
                                }
                            </td>
                            <td>
                                <span class="badge @badgeClass">@badgeText</span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-outline-secondary">Detalles</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-outline-primary">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-3 text-muted">
                            No hay productos registrados todavía.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
