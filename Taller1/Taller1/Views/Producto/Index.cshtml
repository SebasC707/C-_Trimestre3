@model IEnumerable<Taller1.Models.Producto>

<h2>Productos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Fecha Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>@producto.Cantidad</td>
                <td>@producto.FechaCreacion.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.ProductoId" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@producto.ProductoId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

