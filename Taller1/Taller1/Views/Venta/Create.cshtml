@model Taller1.Models.Venta
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Crear Venta</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label>Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Fecha">Fecha</label>
        <input asp-for="Fecha" type="date" class="form-control" />
    </div>

    <h4>Productos</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var producto in ViewBag.Productos)
                {
                    <tr>
                        <td>
                            <input type="hidden" name="VentaProductos[@i].ProductoId" value="@producto.ProductoId" />
                            @producto.Nombre
                        </td>
                        <td>
                            <input type="number" name="VentaProductos[@i].Cantidad" class="form-control" value="0" min="0" />
                        </td>
                        <td>
                            <input type="number" name="VentaProductos[@i].PrecioUnitario" class="form-control" value="@producto.Precio" step="0.01" />
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
