@model IEnumerable<Taller1.Models.Venta>

<h2>Ventas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Venta</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.Cliente.Nombre</td>
                <td>@venta.Fecha.ToShortDateString()</td>
                <td>@venta.Total.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@venta.VentaId" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@venta.VentaId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
